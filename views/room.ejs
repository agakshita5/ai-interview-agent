<body>
  <h2>AI Voice Interview</h2>
  <div>
    <video id="selfVideo" autoplay muted playsinline style="width: 300px; border-radius: 10px;"></video>
    <button id="startBtn">Start Interview</button>
    <button id="recordBtn" disabled>Record Answer</button>
    <button id="endBtn" disabled>End Interview</button>
  </div>
  <div id="log"></div>
